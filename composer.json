{
    "name": "mlencki/geolocalizer",
    "description": "geolocalizer",
    "type": "project",
    "require": {
        "php": "^7.3",
        "ext-json": "*",
        "grocelivery/utils": "~1.1.0",
        "jenssegers/mongodb": "^3.6",
        "laravel/lumen-framework": "^6.0"
    },
    "require-dev": {
        "behat/behat": "^3.5",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Grocelivery\\Geolocalizer\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "features/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
